{
  "name": "anamnese-paas-v2",
  "version": "2.0.0",
  "description": "Multi-tenant Anamnese Inteligente PaaS - API base",
  "type": "module",
  "main": "dist/src/bootstrap/server.js",
  "scripts": {
    "dev": "tsx watch src/bootstrap/server.ts",
    "build": "tsc && tsc-alias -p tsconfig.json --resolve-full-paths",
    "start": "node dist/src/bootstrap/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --testPathPattern='unit'",
    "test:integration": "vitest run --testPathPattern='integration'",
    "test:e2e": "vitest run --testPathPattern='e2e'",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts --config eslint.config.mjs",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:studio": "prisma studio"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@prisma/client": "^5.22.0",
    "@types/qrcode": "^1.5.6",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.7.4",
    "fastify-plugin": "^4.5.1",
    "jsonwebtoken": "^9.0.2",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "stripe": "^20.3.1",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "bcryptjs": "^2.4.3",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4",
    "undici": "^6.12.0",
    "vitest": "^4.0.18"
  }
}
